{
    "$schema": "https://mintlify.com/docs.json",
    "banner": {
        "content": "âš¡ Start accepting digital currency today - [Get onboard today](https://merchant.ceypay.io)",
        "dismissible": true
    },
    "theme": "aspen",
    "name": "CeyPay",
    "fonts": {
        "family": "Lato"
    },
    "colors": {
        "primary": "#1C6EF5",
        "light": "#5097FF",
        "dark": "#1C6EF5"
    },
    "topbarLinks": [
        {
            "name": "Dashboard",
            "url": "https://merchant.ceypay.io"
        }
    ],
    "topbarCtaButton": {
        "type": "github",
        "url": "https://github.com/CeyPay-io"
    },
    "favicon": "/favicon.ico",
    "logo": {
        "light": "/logo/CeyPayLongLight.svg",
        "dark": "/logo/CeyPayLongDark.svg"
    },
    "metadata": {
        "og:site_name": "CeyPay Documentation",
        "og:type": "website",
        "twitter:site": "@ceypayintern"
    },
    "feedback": {
        "suggestEdit": true,
        "raiseIssue": true,
        "thumbsRating": true
    },
    "search": {
        "prompt": "Search CeyPay docs..."
    },
    "modeToggle": {
        "default": "system"
    },
    "navigation": {
        "tabs": [
            {
                "tab": "Docs",
                "icon": "compass",
                "groups": [
                    {
                        "group": "Getting Started",
                        "pages": ["/introduction"]
                    },
                    {
                        "group": "Integrations",
                        "pages": [
                            {
                                "group": "WordPress",
                                "pages": [
                                    "integrations/wordpress/introduction",
                                    "integrations/wordpress/quickstart",
                                    "integrations/wordpress/configuration",
                                    "integrations/wordpress/webhooks",
                                    "integrations/wordpress/testing",
                                    "integrations/wordpress/troubleshooting"
                                ]
                            }
                        ]
                    },
                    {
                        "group": "Resources",
                        "pages": ["guides/faq", "report-abuse"]
                    }
                ]
            },
            {
                "tab": "API Reference",
                "icon": "rectangle-terminal",
                "groups": [
                    {
                        "group": "Getting Started",
                        "pages": ["api/v1/quickstart", "api/v1/authentication"]
                    },
                    {
                        "group": "Core Resources",
                        "pages": [
                            "api/v1/payments-guide",
                            "api/v1/payment-links-guide"
                        ]
                    },
                    {
                        "group": "Webhooks",
                        "pages": ["api/v1/webhooks"]
                    },
                    {
                        "group": "Reference",
                        "pages": ["api/v1/errors", "api/v1/rate-limits"]
                    }
                ]
            },
            {
                "tab": "Changelog",
                "icon": "signal-stream",
                "pages": ["changelog"]
            },
            {
                "tab": "Support",
                "icon": "circle-question",
                "pages": ["support"]
            }
        ],
        "global": {
            "anchors": [
                {
                    "anchor": "Homepage",
                    "href": "https://ceypay.io",
                    "icon": "home"
                },
                {
                    "anchor": "GitHub",
                    "href": "https://github.com/CeyPay-io",
                    "icon": "github"
                },
                {
                    "anchor": "Status",
                    "href": "https://status.ceypay.io/",
                    "icon": "signal-alt"
                }
            ]
        }
    },
    "navbar": {
        "links": [
            {
                "label": "llms-full.txt",
                "href": "https://docs.ceypay.io/llms-full.txt"
            },
            {
                "label": "Support",
                "href": "mailto:support@ceypay.io"
            }
              ],
        "primary": {
            "type": "button",
            "label": "Dashboard",
            "href": "https://merchant.ceypay.io/"
        }
    },
    "tabs": [
        {
            "name": "API Reference",
            "url": "api/v1"
        }
    ],
    "api": {
        "baseUrl": "https://api.ceypay.io",
        "playground": {
            "mode": "simple"
        },
        "maintainOrder": true
    },
    "seo": {
        "indexHiddenPages": false
    },
    "analytics": {
        "plausible": {
            "domain": "docs.ceypay.io"
        }
    },
    "contextual": {
        "options": ["copy", "view", "claude", "chatgpt", "cursor", "vscode"]
    },
    "redirects": [
        {
            "source": "/api/quickstart",
            "destination": "/api/v1/quickstart"
        },
        {
            "source": "/api/authentication",
            "destination": "/api/v1/authentication"
        },
        {
            "source": "/api/payments",
            "destination": "/api/v1/payments"
        },
        {
            "source": "/api/payment-links",
            "destination": "/api/v1/payment-links"
        },
        {
            "source": "/api/webhooks",
            "destination": "/api/v1/webhooks"
        },
        {
            "source": "/api/errors",
            "destination": "/api/v1/errors"
        },
        {
            "source": "/api/rate-limits",
            "destination": "/api/v1/rate-limits"
        },
        {
            "source": "/faq",
            "destination": "/guides/faq"
        },
        {
            "source": "/wordpress/:path*",
            "destination": "/integrations/wordpress/:path*"
        },
        {
            "source": "/guides/wordpress/:path*",
            "destination": "/integrations/wordpress/:path*"
        }
    ],
    "footer": {
        "socials": {
            "x-twitter": "https://x.com/ceypayintern",
            "telegram": "https://t.me/CeyPayio",
             "instagram": "https://www.instagram.com/ceypay.io",
            "github": "https://github.com/CeyPay-io",
             "facebook": "https://www.fb.com/ceypay.io/",
            "linkedin": "https://www.linkedin.com/showcase/ceypay/"
        },
        "links": [
            {
                "header": "Product",
                "items": [
                    {
                        "label": "Home",
                        "href": "https://ceypay.io"
                    },
                    {
                        "label": "Leaderboard",
                        "href": "https://leaderboard.ceypay.io"
                    },
                    {
                        "label": "Affiliate Program",
                        "href": "https://ceypay.io/affiliate"
                    }
                ]
            },
            {
                "header": "Legal",
                "items": [
                    {
                        "label": "Privacy Policy",
                        "href": "https://www.ceypay.io/legal/privacy"
                    },
                    {
                        "label": "Terms & Conditions",
                        "href": "https://www.ceypay.io/legal/terms"
                    }
                ]
            }
        ]
    }
}
