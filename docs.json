{
    "$schema": "https://mintlify.com/docs.json",
    "theme": "mint",
    "name": "CeyPay",
    "colors": {
        "primary": "#1C6EF5",
        "light": "#5097FF",
        "dark": "#1C6EF5"
    },
    "favicon": "/favicon.ico",
    "logo": {
        "light": "/logo/CeyPayLongLight.svg",
        "dark": "/logo/CeyPayLongDark.svg"
    },
    "navigation": {
        "tabs": [
            {
                "tab": "Guides",
                "groups": [
                    {
                        "group": "Getting Started",
                        "pages": ["index"]
                    },
                    {
                        "group": "Integration",
                        "pages": [
                            {
                                "group": "Ecommerce",
                                "pages": [
                                    {
                                        "group": "WordPress",
                                        "pages": ["wordpress/introduction", "wordpress/quickstart", "wordpress/configuration", "wordpress/webhooks", "wordpress/testing"]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "group": "Resources",
                        "pages": ["wordpress/troubleshooting"]
                    },
                    {
                        "group": "Misc",
                        "pages": ["faq", "report-abuse"]
                    }
                ]
            },
            {
                "tab": "API References",
                "groups": [
                    {
                        "group": "Getting Started",
                        "pages": ["api/v1/quickstart", "api/v1/authentication"]
                    },
                    {
                        "group": "Core Resources",
                        "pages": ["api/v1/payments", "api/v1/payment-links", "api/v1/webhooks"]
                    },
                    {
                        "group": "Reference",
                        "pages": ["api/v1/errors", "api/v1/rate-limits"]
                    }
                ]
            }
        ],
        "global": {
            "anchors": [
                {
                    "anchor": "Homepage",
                    "href": "https://ceypay.io",
                    "icon": "house"
                },
                {
                    "anchor": "GitHub",
                    "href": "https://github.com/CeyPay-io",
                    "icon": "github"
                }
            ]
        }
    },
    "navbar": {
        "links": [
            {
                "label": "Support",
                "href": "mailto:support@ceypay.io"
            }
        ],
        "primary": {
            "type": "button",
            "label": "Get Onboarded",
            "href": "https://merchant.ceypay.io/"
        }
    },
    "contextual": {
        "options": ["copy", "view", "chatgpt", "claude", "perplexity", "mcp", "cursor", "vscode"]
    },
    "footer": {
        "socials": {
            "x-twitter": "https://x.com/ceypayintern",
            "telegram": "https://t.me/CeyPayio",
             "instagram": "https://www.instagram.com/ceypay.io",
            "github": "https://github.com/CeyPay-io",
             "facebook": "https://www.fb.com/ceypay.io/",
            "linkedin": "https://www.linkedin.com/showcase/ceypay/"
        },
        "links": [
            {
